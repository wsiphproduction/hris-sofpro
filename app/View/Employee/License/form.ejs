<div class="widget custom-modal" v-if="licenseInfo">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="licenseInfo = false"><i class="mdi mdi-close"></i></button>
		</div>
		<form action="<%= baseUrl +'/employee/license/'+ employee.id %>" method="post" @submit.prevent="onSubmit">
			 <div class="body">
				<div class="form-row">
					<div class="form-group col-md-4">
						<label for="license" class="isRequired">License</label>
                        <input class="form-control"  v-model="form.license"/>   
						<div class="form-text form-error" v-if="!! errors.license" v-text="errors.license"></div>
					</div>
					<div class="form-group col-md-4">
						<label for="description" class="isRequired">Description</label>
                        <input class="form-control"  v-model="form.description"/>   
						<div class="form-text form-error" v-if="!! errors.description" v-text="errors.description"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="date_issued" class="isRequired">Date Issued</label>
						<datetime type="date" input-class="form-control" input-id="date_issued" v-model="form.date_issued"></datetime>
                        <div class="form-text form-error" v-if="!! errors.date_issued" v-text="errors.date_issued"></div>
					</div>
					<div class="form-group col-md-4">
						<label for="expiration" class="isRequired">Expiration</label>
						<datetime type="date" input-class="form-control" input-id="expiration" v-model="form.expiration"></datetime>
                        <div class="form-text form-error" v-if="!! errors.expiration" v-text="errors.expiration"></div>
					</div>
					<div class="form-group col-md-4">
						<label for="start_date" class="isRequired">Start Date</label>
						<datetime type="date" input-class="form-control" input-id="start_date" v-model="form.start_date"></datetime>
                        <div class="form-text form-error" v-if="!! errors.start_date" v-text="errors.start_date"></div>
					</div>
					<div class="form-group col-md-4">
						<label for="end_date" class="isRequired">End Date</label>
						<datetime type="date" input-class="form-control" input-id="end_date" v-model="form.end_date"></datetime>
                        <div class="form-text form-error" v-if="!! errors.end_date" v-text="errors.end_date"></div>
					</div>
				</div>
			<div class="footer">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-else="loading">Submit</button>
				<button type="button" class="btn btn-light" v-on:click="licenseInfo = false">Cancel</button>
			</div>
		</form>
	</div>
</div> 
