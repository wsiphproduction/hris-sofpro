<div class="widget custom-modal" v-if="caseInfo">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="caseInfo = false"><i class="mdi mdi-close"></i></button>
		</div>
		<form action="<%= baseUrl +'/employee/disciplinary-cases/' + employee.id %>" method="post" @submit.prevent="onSubmit">
			 <div class="body">
				<div class="form-row">
					<div class="form-group col-md-4">
						<label for="incident_report" class="isRequired">IR</label>
                        <input class="form-control"  v-model="form.incident_report"/>
						<div class="form-text form-error" v-if="!! errors.incident_report" v-text="errors.incident_report"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="prepared_by" class="isRequired">Prepared By</label>
                        <input class="form-control"  v-model="form.prepared_by"/>
						<div class="form-text form-error" v-if="!! errors.prepared_by" v-text="errors.prepared_by"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="received_by" class="isRequired">Received By</label>
                        <input class="form-control"  v-model="form.received_by"/>
						<div class="form-text form-error" v-if="!! errors.received_by" v-text="errors.received_by"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="incident_date" class="isRequired">Date of Incident</label>
                        <datetime type="date" input-class="form-control" input-id="start_date" v-model="form.incident_date"></datetime>
						<div class="form-text form-error" v-if="!! errors.incident_date" v-text="errors.incident_date"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="code" class="isRequired">Code</label>
                        <input class="form-control"  v-model="form.code"/>
						<div class="form-text form-error" v-if="!! errors.code" v-text="errors.code"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="decision_serve" class="isRequired">Notice of Decision Date Served</label>
						<datetime type="date" input-class="form-control" input-id="start_date" v-model="form.decision_serve"></datetime>
						<div class="form-text form-error" v-if="!! errors.decision_serve" v-text="errors.decision_serve"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="start_date" class="isRequired">Effectivity Date Start</label>
						<datetime type="date" input-class="form-control" input-id="start_date" v-model="form.start_date"></datetime>
						<div class="form-text form-error" v-if="!! errors.start_date" v-text="errors.start_date"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="end_date" class="isRequired">Effectivity Date End</label>
						<datetime type="date" input-class="form-control" input-id="start_date" v-model="form.end_date"></datetime>
						<div class="form-text form-error" v-if="!! errors.end_date" v-text="errors.end_date"></div>
					</div>
                    
				</div>
			<div class="footer">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-else="loading">Submit</button>
				<button type="button" class="btn btn-light" v-on:click="caseInfo = false">Cancel</button>
			</div>
		</form>
	</div>
</div> 
