<div class="widget custom-modal" v-if="modal">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="closeModal"><i class="mdi mdi-close"></i></button>
		</div>
		<form action="<%= baseUrl +'/employee/loan/'+ employee.shortid %>" method="post" @submit.prevent="onSubmit">
			<div class="body">
				<div class="form-row">
					<div class="form-group col-md-12">
						<label for="label">Label</label>
						<input type="text" id="label" class="form-control" v-model="form.label">
						<div class="form-text form-error" v-if="!! errors.label" v-text="errors.label"></div>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="amount">Amount</label>
						<input type="text" id="amount" class="form-control" v-model="form.amount">
						<div class="form-text form-error" v-if="!! errors.amount" v-text="errors.amount"></div>
					</div>
					<div class="form-group col-md-6">
						<label for="mode">Mode of Payment</label>
						<select id="mode" class="form-control" v-model="form.mode">
							<option value="">--Select--</option>
							<option value="0">Cash</option>
							<option value="1">Salary Deduction</option>
						</select>
						<div class="form-text form-error" v-if="!! errors.mode" v-text="errors.mode"></div>
					</div>
					<div class="form-group col-md-6">
						<label for="date_to_pay">Start Date to Pay</label>
						<datetime type="date" input-class="form-control" input-id="date_to_pay" v-model="form.date_to_pay"></datetime>
						<div class="form-text form-error" v-if="!! errors.date_to_pay" v-text="errors.date_to_pay"></div>
					</div>
					<div class="form-group col-md-6">
						<label for="frequency">Loan Frequency</label>
						<input type="text" id="frequency" class="form-control" v-model="form.frequency">
						<div class="form-text form-error" v-if="!! errors.frequency" v-text="errors.frequency"></div>
					</div>
					<div class="form-group col-md-6">
						<label for="loan_type">Loan Type</label>
						<select id="loan_type" class="form-control" v-model="form.loan_type">
							<option value="">--Select--</option>
							<option value="1">SSS Salary Loan</option>
							<option value="2">Pag-Ibig Salary Loan</option>
							<option value="3">Employee Personal Advances</option>
							<option value="4">HMO Employee Share</option>
							<option value="5">Phone Unit Advances</option>
							<option value="6">Excess Mobile Usage Charges</option>
						</select>
						<div class="form-text form-error" v-if="!! errors.loan_type" v-text="errors.loan_type"></div>
					</div>
					<div class="form-group col-md-6">
						<label for="status">Status</label>
						<select id="status" class="form-control" v-model="form.status">
							<option value="">--Select--</option>
							<option value="0">Processing</option>
							<option value="1">Approved</option>
							<option value="2">Complete</option>
						</select>
						<div class="form-text form-error" v-if="!! errors.status" v-text="errors.status"></div>
					</div>
				</div>
			</div>
			<div class="footer">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-else="loading">Submit</button>
				<button type="button" class="btn btn-light" v-on:click="closeModal">Cancel</button>
			</div>
		</form>
	</div>
</div>