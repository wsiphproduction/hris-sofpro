<div class="widget custom-modal" v-if="performanceInfo">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="performanceInfo = false"><i class="mdi mdi-close"></i></button>
		</div>
		<form action="<%= baseUrl +'/employee/performance-review/' + employee.id %>" method="post" @submit.prevent="onSubmit">
			 <div class="body">
				<div class="form-row">
					<div class="form-group col-md-4">
						<label for="title" class="isRequired">Title</label>
                        <input class="form-control"  v-model="form.title"/>   
						<div class="form-text form-error" v-if="!! errors.title" v-text="errors.title"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="evaluation_date" class="isRequired">Evaluation  Date</label>
                        <datetime type="date" input-class="form-control" input-id="evaluation_date" v-model="form.evaluation_date"></datetime>
						<div class="form-text form-error" v-if="!! errors.evaluation_date" v-text="errors.evaluation_date"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="evaluator" class="isRequired">Evaluator</label>
                        <input class="form-control"  v-model="form.evaluator"/>   
						<div class="form-text form-error" v-if="!! errors.evaluator" v-text="errors.evaluator"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="rating" class="isRequired">Rating</label>
                        <input class="form-control"  v-model="form.rating"/>   
						<div class="form-text form-error" v-if="!! errors.rating" v-text="errors.rating"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="recommendation" class="isRequired">Recommendation</label>
                        <input class="form-control"  v-model="form.recommendation"/>   
						<div class="form-text form-error" v-if="!! errors.recommendation" v-text="errors.recommendation"></div>
					</div>
					<div class="form-group col-md-4">
						<label for="remarks" class="isRequired">Remarks</label>
                        <input class="form-control"  v-model="form.remarks"/>   
						<div class="form-text form-error" v-if="!! errors.remarks" v-text="errors.remarks"></div>
					</div>
					<div class="form-group col-md-4">
						<label for="points" class="isRequired">Points</label>
                        <input class="form-control"  v-model="form.points"/>   
						<div class="form-text form-error" v-if="!! errors.points" v-text="errors.points"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="description" class="isRequired">Description</label>
                        <input class="form-control"  v-model="form.description"/>   
						<div class="form-text form-error" v-if="!! errors.description" v-text="errors.description"></div>
					</div>
				</div>
			<div class="footer">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-else="loading">Submit</button>
				<button type="button" class="btn btn-light" v-on:click="performanceInfo = false">Cancel</button>
			</div>
		</form>
	</div>
</div> 
