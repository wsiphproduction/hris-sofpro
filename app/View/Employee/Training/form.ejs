<div class="widget custom-modal" v-if="trainingInfo">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="trainingInfo = false"><i class="mdi mdi-close"></i></button>
		</div>
		<form action="<%= baseUrl +'/employee/training/' + employee.id %>" method="post" @submit.prevent="onSubmit">
			 <div class="body">
				<div class="form-row">
					<div class="form-group col-md-4">
						<label for="title" class="isRequired">Title</label>
                        <input class="form-control"  v-model="form.title"/>   
						<div class="form-text form-error" v-if="!! errors.title" v-text="errors.title"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="description" class="isRequired">Description</label>
                        <input class="form-control"  v-model="form.description"/>   
						<div class="form-text form-error" v-if="!! errors.description" v-text="errors.description"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="start_date" class="isRequired">Start Date</label>
                        <datetime type="date" input-class="form-control" input-id="start_date" v-model="form.start_date"></datetime>
						<div class="form-text form-error" v-if="!! errors.start_date" v-text="errors.start_date"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="end_date" class="isRequired">End Date</label>
                        <datetime type="date" input-class="form-control" input-id="end_date" v-model="form.end_date"></datetime>
						<div class="form-text form-error" v-if="!! errors.end_date" v-text="errors.end_date"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="days" class="isRequired">No. of days</label>
                        <input class="form-control"  v-model="form.days"/>   
						<div class="form-text form-error" v-if="!! errors.end_date" v-text="errors.end_date"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="provider" class="isRequired">Training Provider</label>
                        <input class="form-control"  v-model="form.provider"/>   
						<div class="form-text form-error" v-if="!! errors.provider" v-text="errors.provider"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="points" class="isRequired">CPD Points Earned</label>
                        <input class="form-control"  v-model="form.points"/>   
						<div class="form-text form-error" v-if="!! errors.points" v-text="errors.points"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="report" class="isRequired">Assessment Report</label>
                        <input class="form-control"  v-model="form.report"/>   
						<div class="form-text form-error" v-if="!! errors.report" v-text="errors.report"></div>
					</div>
                    
				</div>
			<div class="footer">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-else="loading">Submit</button>
				<button type="button" class="btn btn-light" v-on:click="trainingInfo = false">Cancel</button>
			</div>
		</form>
	</div>
</div> 
