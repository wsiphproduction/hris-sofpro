<div class="widget custom-modal" v-if="modal">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="closeModal"><i class="mdi mdi-close"></i></button>
		</div>
		<form action="<%= baseUrl +'/employee/document/'+ employee.shortid %>" method="post" @submit.prevent="onSubmit" enctype="multipart/form-data">
			<div class="body">
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="label">Label</label>
						<input type="text" id="label" class="form-control" v-model="form.label" name="label">
						<div class="form-text form-error" v-if="!! errors.label" v-text="errors.label"></div>
					</div>
					<div class="form-group col-md-6">
						<label for="document">Document</label>
						<input type="file" id="document" class="form-control-file" name="document" v-on:change="onAttachmentChange($event)" accept="application/msword, application/vnd.ms-excel, application/vnd.ms-powerpoint,
text/plain, application/pdf, image/*">
						<div class="form-text form-error" v-if="!! errors.document" v-text="errors.document"></div>
					</div>
					
				</div>
				<div class="form-row">
					<div class="form-group col-md-12">
						<label for="description">Description</label>
						<textarea id="description" class="form-control" v-model="form.description" rows="5" name="description"></textarea>
						<div class="form-text form-error" v-if="!! errors.amount" v-text="errors.description"></div>
					</div>
				</div>
			</div>
			<div class="footer">
				<input type="hidden" name="id" v-model="form.id">
				<input type="hidden" name="filename" v-model="form.filename">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-else="loading">Submit</button>
				<button type="button" class="btn btn-light" v-on:click="closeModal">Cancel</button>
			</div>
		</form>
	</div>
</div>