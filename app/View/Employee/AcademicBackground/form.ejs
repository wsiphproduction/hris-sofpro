<div class="widget custom-modal" v-if="modal">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="modal = false"><i class="mdi mdi-close"></i></button>
		</div>
		<form action="<%= baseUrl +'/employee/academic-background/'+ employee.shortid %>" method="post" @submit.prevent="onSubmit">
			<div class="body">
				<div class="form-row">
                    <div v-if="form.educational_attainment === 'Others'" class="form-group col-md-4">
                        <label for="others">Please specifify : </label>
                        <input type="text" class="form-control" id="others" v-model="form.others">
                    </div>
					<div v-else class="form-group col-md-4">
                        <label for="company">Form of Study</label>
                        <select name="educational_attainment" id="educational_attainment" class="form-control" v-model="form.educational_attainment">
                            <option value="" disabled>-- Select --</option>
                            <option value="High School Graduate">High School Graduate</option>
                            <option value="Senior High School Graduate">Senior High School Graduate</option>
                            <option value="College Undergraduate">College Undergraduate</option>
                            <option value="College Graduate">College Graduate</option>
                            <option value="Vocational/Technical Graduate">Vocational/Technical Graduate</option>
                            <option value="Master's Degree Holder">Master's Degree Holder</option>
                            <option value="Doctoral Degree Holder">Doctoral Degree Holder</option>
                            <option value="Others">Others</option>
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label for="degree">Education Level</label>
                        <input type="text" class="form-control" id="degree" v-model="form.degree">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="school">School</label>
                        <input type="text" class="form-control" id="school" v-model="form.school">
                    </div>
				</div>
                <div class="form-row">
					<div class="form-group col-md-4">
                        <label for="date_from">Date From</label>
                        <datetime type="date" input-class="form-control" input-id="date_from" v-model="form.date_from"></datetime>                    
                    </div>
                    <div class="form-group col-md-4">
                        <label for="date_to">Date To</label>
                        <datetime type="date" input-class="form-control" input-id="date_to" v-model="form.date_to"></datetime>                    
                    </div>
				</div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="course">Course</label>
                        <input type="text" class="form-control" id="course" v-model="form.course">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="specialization">Specialization</label>
                        <input type="text" class="form-control" id="specialization" v-model="form.specialization">
                    </div>
                    <div class="form-group col-md-4">
                        <label for="honors">Honors</label>
                        <input type="text" class="form-control" id="honors" v-model="form.honors">
                    </div>
                </div>
			</div>
			<div class="footer">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-else="loading">Submit</button>
				<button type="button" class="btn btn-light" v-on:click="modal = false">Cancel</button>
			</div>
		</form>
	</div>
</div>