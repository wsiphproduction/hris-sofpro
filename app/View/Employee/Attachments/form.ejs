<div class="widget custom-modal" v-if="attachment_modal">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="attachment_modal = false"><i class="mdi mdi-close"></i></button>
		</div>
		<form action="<%= baseUrl +'/employee/attachment/' + employee.id %>" method="post" @submit.prevent="onSubmit" enctype="multipart/form-data">
			 <div class="body">
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="attachment">Attachment</label>
						<input type="file" id="attachment" class="form-control-file" accept="image/*, application/pdf" v-on:change="onAttachmentChange($event)" name="attachment">
						<div class="form-text form-error" v-if="!! errors.attachment" v-text="errors.attachment"></div>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-4">
						<label for="description" class="isRequired">Description</label>
                        <input class="form-control"  v-model="form.description"/>   
						<div class="form-text form-error" v-if="!! errors.description" v-text="errors.description"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="document_number" class="isRequired">Document Number</label>
                        <input class="form-control"  v-model="form.document_number"/> 
                        <div class="form-text form-error" v-if="!! errors.document_number" v-text="errors.document_number"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="place_of_issue" class="isRequired">Place of issue</label>
                        <input class="form-control"  v-model="form.place_of_issue" />
						<div class="form-text form-error" v-if="!! errors.place_of_issue" v-text="errors.place_of_issue"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="document_type" class="isRequired">Document Type</label>
                        <input class="form-control"  v-model="form.document_type" />
						<div class="form-text form-error" v-if="!! errors.document_type" v-text="errors.document_type"></div>
					</div>
                    <div class="form-group col-md-4">
						<label for="remarks" class="isRequired">Remarks</label>
                        <input class="form-control"  v-model="form.remarks" />
						<div class="form-text form-error" v-if="!! errors.remarks" v-text="errors.remarks"></div>
					</div>
				</div>
			<div class="footer">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-else="loading">Submit</button>
				<button type="button" class="btn btn-light" v-on:click="attachment_modal = false">Cancel</button>
			</div>
		</form>
	</div>
</div> 
