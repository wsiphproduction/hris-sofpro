<div class="widget custom-modal preview" v-if="previewModal">
	<div class="modal-container">
		<div class="heading">
			<h4>Shift Details</h4>
			<button class="close-modal" v-on:click="previewClose"><i class="mdi mdi-close"></i></button>
		</div>
		
		<div class="body">
			<div class="row">
				<div class="col-md-6">
					<small>Date Filed</small>
					
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<small>Approver</small>
					<div v-text="preview.approver"></div>
				</div>
				<div class="col-md-6">
					<small>Status</small>
					<div v-text="preview.status"></div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<small>Shift Type</small>
					<div v-text="preview.type"></div>
				</div>
				<div class="col-md-6">
					<small>Date</small>
					<div v-text="preview.date"></div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<small>Shift Length [in hours]</small>
					<div v-text="preview.shift_length"></div>
				</div>
				<div class="col-md-6">
					<small>Paid Hours</small>
					<div v-text="preview.paid_hours"></div>
				</div>
			</div>

			<div class="row" v-if="preview.type == 1">
				<div class="col-md-6">
					<small>Start Time</small>
					<div v-text="preview.start_time"></div>
				</div>
				<div class="col-md-6">
					<small>End Time</small>
					<div v-text="preview.end_time"></div>
				</div>
			</div>

			<div class="row" v-if="preview.type == 3">
				<div class="col-md-12">
					<small>Time Between</small>
					<div v-text="preview.time_between"></div>
				</div>
			</div>

			<div class="row">
				<div class="col-md-12">
					<small>Approver Note</small>
					<div v-text="preview.approver_note"></div>
				</div>
			</div>
		</div>
		<div class="footer">
			<button type="button" class="btn btn-secondary" v-on:click="previewClose">Close</button>
		</div>
		
	</div>
</div>