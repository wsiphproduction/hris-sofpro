<div class="widget custom-modal" v-if="modal">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="closeModal"><i class="mdi mdi-close"></i></button>
		</div>
		
			<form action="<%= baseUrl %>/settings/approvers/custom" method="post" @submit.prevent="onSubmit">
			<div class="body">
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="employee" class="isRequired">Employee</label>
						<select id="employee" class="form-control" v-model="form.employee" :disabled="disabled">
							<option value="">--Select--</option>
							<% if(users.length){ 
								for(let u in users){
							%>
							<option value="<%= users[u].id %>"><%= users[u].first_name +' '+ users[u].last_name %></option>
							<% 
								}
							} 
							%>
						</select>
						<div class="form-text form-error" v-if="!! errors.employee" v-text="errors.employee"></div>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="backup_approver">Team Leader</label>
						<select class="form-control" id="backup_approver" v-model="form.backup_approver">
							<option value="">--Select--</option>
							<% if(users.length){ 
								for(let u in users){
							%>
							<option value="<%= users[u].id %>"><%= users[u].first_name +' '+ users[u].last_name %></option>
							<% 
								}
							} 
							%>
						</select>
						<div class="form-text form-error" v-if="!! errors.backup_approver" v-text="errors.backup_approver"></div>
					</div>
					<div class="form-group col-md-6">
						<label for="primary_approver" class="isRequired">Manager/Head</label>
						<select class="form-control" id="primary_approver" v-model="form.primary_approver">
							<option value="">--Select--</option>
							<% if(users.length){ 
								for(let u in users){
							%>
							<option value="<%= users[u].id %>"><%= users[u].first_name +' '+ users[u].last_name %></option>
							<% 
								}
							} 
							%>
						</select>
						<div class="form-text form-error" v-if="!! errors.primary_approver" v-text="errors.primary_approver"></div>
					</div>
				</div>
			</div>
			<div class="footer">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-else="loading" >Submit</button>
				<button type="button" class="btn btn-light" v-on:click="closeModal">Cancel</button>
			</div>
			</form>
		
	</div>
</div>