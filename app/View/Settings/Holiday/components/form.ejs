<div class="widget custom-modal" v-if="modal">
	<div class="modal-container">
		<div class="heading">
			<h4 v-text="modalText"></h4>
			<button class="close-modal" v-on:click="close"><i class="mdi mdi-close"></i></button>
		</div>
		
			<form action="<%- baseUrl %>/settings/holidays" method="post" @submit.prevent="onSubmit">
			<div class="body">
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="location" class="isRequired">Location</label>
						<Multiselect 
							v-model="form.location" 
							class="multiselect-tag" 
							:options="locations" 
							label="location"
							:hide-selected="true"
							:close-on-select="false"
							track-by="id"
							multiple >
						</Multiselect>
						<div class="form-text form-error" v-if="!! errors.location" v-text="errors.location"></div>
					</div>
					<div class="form-group col-md-6">
						<label for="type" class="isRequired">Type</label>
						<select id="type" class="form-control" v-model="form.type">
							<option value="" disabled>--Select--</option>
							<option value="1">Regular Holiday</option>
							<option value="2">Special Non-working Holiday</option>
						</select>
						<div class="form-text form-error" v-if="!! errors.type" v-text="errors.type"></div>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="date" class="isRequired">Date</label>
						<datetime type="date" input-class="form-control" input-id="date" v-model="form.date"></datetime>
						<div class="form-text form-error" v-if="!! errors.date" v-text="errors.date"></div>
					</div>
					<div class="form-group col-md-6">
						<label for="title" class="isRequired">Holiday Name</label>
						<input type="text" id="title" class="form-control" v-model="form.title">
						<div class="form-text form-error" v-if="!! errors.title" v-text="errors.title"></div>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-12">
						<label for="note">Note</label>
						<textarea id="note" class="form-control" rows="5" v-model="form.note"></textarea>
						<div class="form-text form-error" v-if="!! errors.note" v-text="errors.note"></div>
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col-md-6">
						<label for="status" class="isRequired">Status</label>
						<select id="status" class="form-control" v-model="form.status">
							<option value="" disabled>--Select--</option>
							<option value="1">Active</option>
							<option value="2">Inactive</option>
						</select>
						<div class="form-text form-error" v-if="!! errors.status" v-text="errors.status"></div>
					</div>
				</div>
			</div>
			<div class="footer">
				<button type="button" class="btn btn-primary" v-if="loading"><i class="mdi mdi-loading mdi-spin"></i> Processing...</button>
				<button type="submit" class="btn btn-primary" v-if="!loading">Submit</button>
				<button type="button" class="btn btn-light" v-on:click="close">Cancel</button>
			</div>
			</form>
		
	</div>
</div>