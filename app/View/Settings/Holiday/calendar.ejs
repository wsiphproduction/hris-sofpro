<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title><%= APP_NAME ? APP_NAME +' â€” ' : '' %> Holidays</title>
	<% include ../../Include/head %>

</head>
<body>
	<div id="app">
	<% include ../../Include/header %>
	
	<% include ../../Include/aside %>
	
	<main v-bind:class="fluid ? 'full-width':''">
		<setting-holiday inline-template>
			<div class="wrapper">
				<div class="bread-crumb">
					<ol>
						<li class="breadcrumb-item"><a href="<%= baseUrl %>">Dashboard</a></li>
						<li class="breadcrumb-item"><span>Settings</span></li>
						<li class="breadcrumb-item"><span class="active">Holidays</span></li>
					</ol>
					<div class="buttons">
						<div class="btn-group" style="margin-right: 15px;">
							<a href="<%= baseUrl + '/settings/holidays' %>" class="btn btn-outline-primary btn-sm"><i class="mdi mdi-format-list-bulleted"></i></a>
							<a href="javascript:void(0);" class="btn btn-primary btn-sm"><i class="mdi mdi-calendar-check"></i></a>
						</div>
						<% if(user_role.write){ %>
						<a href="javascript:void(0);" class="btn btn-primary btn-sm" v-on:click="open()"><i class="mdi mdi-plus"></i> New</a>
						<% } %>
					</div>
				</div>
				<div class="app-container">
					<div class="row">
						<div class="col">
							<h5>Holiday Record</h5>
							
							<calendar :events="events"></calendar>

						</div>
					</div>
					<% if(user_role.write || user_role.modify){ %>
					<% include ./components/form %>
					<% } %>
				</div>
				
				<% include ../../Include/alert %>

			</div>
		</setting-holiday>
	</main>
	
	</div>
	<% include ../../Include/javascript %>

</body>
</html>